        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-promise": "^5.1.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "eslint-plugin-vue": "^7.11.1",
        "husky": "^6.0.0",
        "jquery": "^3.6",
        "laravel-mix": "^6.0.6",
        "lint-staged": "^11.0.0",
        "lodash": "^4.17.19",
        "popper.js": "^1.16.1",
        "postcss": "^8.1.14",
        "resolve-url-loader": "^3.1.2",
        "sass": "^1.32.13",
        "sass-loader": "^11.0.1",
        "vue": "^2.6.12",
        "vue-loader": "^15.9.7",
        "vue-template-compiler": "^2.6.12"
    },
    "dependencies": {
        "vue-router": "^3.5.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
